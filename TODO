-- проверка браузера, если IE, вывести сообщение
-- добавить блок "Информация обновлена: дата"
-- добавить сведения о разработчике, обратную связь, историю версий

CREATE TABLE IF NOT EXISTS `logs` (
  `id` int NOT NULL,
  `datetime` datetime NOT NULL,
  `client` char(30) CHARACTER SET utf8 COLLATE utf8_general_ci NOT NULL DEFAULT '',
  `description` varchar(256) CHARACTER SET utf8 COLLATE utf8_general_ci NOT NULL DEFAULT '',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci;


